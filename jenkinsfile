pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }
        stage('Cleanup') {
            steps {
                script {
                    echo 'Stopping all running containers...'
                    bat 'for /F "tokens=*" %i IN (\'docker ps -q\') DO docker stop %i'

                    echo 'Removing all containers...'
                    bat 'for /F "tokens=*" %i IN (\'docker ps -aq\') DO docker rm %i'
                }
            }
        }
        stage('Build Backend Docker Image') {
            steps {
                dir('backend') {
                    script {
                        bat 'docker build -t backend-app .'
                    }
                }
            }
        }
        stage('Build Frontend Docker Image') {
            steps {
                dir('frontend') {
                    script {
                        bat 'docker build -t frontend-app .'
                    }
                }
            }
        }
        stage('Run Containers') {
            steps {
                script {
                    bat 'docker run -d -P 3001:3001 backend-app'
                    bat 'docker run -d -P 80:80 frontend-app' // Utiliser le port 8080
                }
            }
        }
    }
}
