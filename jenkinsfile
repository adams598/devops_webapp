pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/adams598/devops_webapp.git'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker build -t backend-app .'
                sh 'docker run -p 3001:3001 backend-app'
            }
        }
    }
}
