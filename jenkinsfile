pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }
        stage('Build Backend Docker Image') {
            steps {
                dir('backend') {
                    script {
                        sh 'docker build -t backend-app .'
                    }
                }
            }
        }
        stage('Build Frontend Docker Image') {
            steps {
                dir('frontend') {
                    script {
                        sh 'docker build -t frontend-app .'
                    }
                }
            }
        }
        stage('Test Deployment') {
            steps {
                script {
                    def status = sh(script: 'curl -s -o /dev/null -w "%{http_code}" http://localhost:3001', returnStdout: true).trim()
                    if (status != "200") {
                        error "Service not responding correctly!"
                    }
                }
            }
        }
        stage('Run Containers') {
            steps {
                script {
                    sh 'docker run -d -p 3001:3001 backend-app'
                    sh 'docker run -d -p 80:80 frontend-app'
                }
            }
        }
    }
}
